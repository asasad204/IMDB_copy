<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="https://www.iconpacks.net/icons/1/free-cinema-icon-849-thumb.png" type="image/x-icon">
    <title>Add movie</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        body{padding:0;margin:0;background-color: black;}
        #icon{
            width: 30px;
            height: auto;
            margin-right: 20%;
        }
        #icon:hover{
            cursor: pointer;
        }
        .navigacija{
            margin:0;
            padding: 0;
        }
        #navi{
            padding:10px;
        }

    </style>
</head>
<body>
<div class="container-fluid sticky-top navigations navigacija">
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark m-2 navigacija" id="navi">
        <div class="container-fluid ">
            <img src="https://www.iconpacks.net/icons/1/free-cinema-icon-849-thumb.png" id="icon" alt="ikona" onclick="pocetna()">
            <button class="navbar-toggler" type="button" onclick="prikaziMeniMobile()">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse navigation-items" id="collapsibleNavbar">
                <div class="d-flex justify-content-center align-items-center" style="flex-grow: 1;">
                    <div id="search">
                        <form class="d-flex" action="/search" method="post">
                            <input class="form-control me-2" type="text"  id="searchTerm" name="searchTerm" placeholder="Search">
                            <button class="btn btn-primary" type="submit">Search</button>
                        </form>
                    </div>
                    <div style="margin-left:10%;">
                        <ul class="navbar-nav me-auto">

                            <li class="nav-item">
                                <a class="nav-link" href="/watchlist">Watchlist</a>
                            </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/admin">Add movie</a>
                                </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/login/logout">Sign out</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</div>
<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card rounded p-3"  style="width: 400px;">
        <h1 class="text-center mb-4">Film</h1>
        <form method="POST" action="/dodaj/film">
            <div class="mb-3">
                <label for="naziv" class="form-label">Naziv</label>
                <input type="text" name="naziv" class="form-control" id="naziv">
            </div>
            <div class="mb-3">
                <label for="url_slike" class="form-label">URL Slike</label>
                <input type="url" name="url_slike" class="form-control" id="url_slike">
            </div>
            <div class="mb-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="number" name="rating" class="form-control" id="rating">
            </div>
            <div class="mb-3">
                <label for="opis" class="form-label">Opis</label>
                <input type="text" name="opis" class="form-control" id="opis">
            </div>
            <div class="mb-3">
                <label for="datum_release" class="form-label">Date Release</label>
                <input type="date" name="datum_release" class="form-control" id="datum_release">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<script>
    function pocetna(){
        window.location = '/filmovi'
    }
    const mobileNav = document.getElementById('collapsibleNavbar');
    let isDropDownOpen = false;
    let isClickedMobileNav = false;
    const search = document.getElementById('search');
    function prikaziMeniMobile(){
        mobileNav.classList.toggle('show');
        if(isClickedMobileNav){
            mobileNav.style.display = "none";
            search.style.marginTop = '0';
        }
        else{
            mobileNav.style.display = "block";
            search.style.marginTop = '10px';
        }
        isClickedMobileNav = !isClickedMobileNav;
    }
</script>
</body>
</html>